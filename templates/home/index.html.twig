{% extends 'base.html.twig' %}

{% block title %}HomePage{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 mt-16">
        <h1 class="text-3xl font-bold mb-8">Derniers articles</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for article in lastArticles %}
                <div>
                    {% include 'components/article_card.html.twig' with {'article': article} %}
                </div>
            {% endfor %}
        </div>

        <!-- Encart d'inscription à la newsletter -->
        <div class="bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-4 my-8">
            <h2 class="font-bold text-lg mb-2">Restez informé !</h2>
            <p class="mb-4">Inscrivez-vous à notre newsletter pour recevoir nos derniers articles.</p>
            <form class="flex">
                <input type="email" placeholder="Votre email" class="flex-grow p-2 border border-blue-300 rounded-l focus:outline-none focus:ring-2 focus:ring-blue-500">
                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-r hover:bg-blue-600 transition duration-300">S'inscrire</button>
            </form>
        </div>

        <!-- Appel à l'action pour la page des articles -->
        <div class="text-center my-8">
            <a href="{{ path('app_article_all') }}" class="bg-green-500 text-white px-6 py-3 rounded-full hover:bg-green-600 transition duration-300 inline-block">
                Voir tous nos articles
            </a>
        </div>

        <!-- Appel à l'action pour devenir membre premium -->
        <div class="bg-yellow-100 border border-yellow-400 rounded p-6 my-8">
            <h2 class="text-2xl font-bold text-yellow-800 mb-4">Devenez membre premium !</h2>
            <p class="text-yellow-700 mb-4">Accédez à du contenu exclusif et bénéficiez d'avantages uniques.</p>
            {# <a href="{{ path('app_payment') }}" class="bg-yellow-500 text-white px-6 py-3 rounded hover:bg-yellow-600 transition duration-300 inline-block"> #}
                Rejoindre maintenant
            </a>
        </div>
    </div>
{% endblock %}